# Admin Dashboard Dockerfile
FROM node:24-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY frontend/admin/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY frontend/admin/ .

# Expose port
EXPOSE 5173

# Start dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
